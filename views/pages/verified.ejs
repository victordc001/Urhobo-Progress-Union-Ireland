<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="UPUI – Account Verified">
<meta name="twitter:description" content="Your UPUI account verification is complete. Welcome to the Urhobo Progress Union Ireland community!">
<meta name="twitter:image" content="https://upuireland.org/img/upuilogo.png">
<meta name="twitter:url" content="https://upuireland.org">

  <style>
     .loginf{
             min-width:100px;
             margin-left:20px;
             margin-right:20px;
             padding-left:20px;
             padding-right:20px;
             margin-top:40px;  
             text-align:center;   
             margin-bottom:40px;
          }      


          .loginf i{
            font-weight:bold;
            font-size:70px; 
            color:green;
            animation-name:verify;
            animation-duration:0.7s;
            animation-iteration-count:infinite;
          }   

          .bigg{
              margin-top:10px;
              font-size:18px;
              font-family:'Poppins', sans-serif;
          }

          .loginf button{
               padding:15px;
               border:none; 
               color:white;
               background-color:dodgerblue;
               margin-top:10px;
               width:100%; 
               font-weight:bold;
               font-size:17px;
          }  


          @keyframes verify{
              from{
                color:black;
              }   

              to{
                color:dodgerblue;
              }
          }

  </style>
</head>
<body>
     

     <!-- Header Area -->
   <%- include('../partials/header.ejs') %>
   <!-- End Header Area -->

   <!-- Breadcrumbs -->
   <div class="breadcrumbs overlay">
       <div class="container">
           <div class="bread-inner">
               <div class="row">
                   <div class="col-12">
                       <h2>Verification</h2>
                       <ul class="bread-list">
                           <li><a href="/">Home</a></li>
                           <li><i class="icofont-simple-right"></i></li>
                           <li class="active">Verification</li>
                       </ul>
                   </div>
               </div>
           </div>
       </div>
   </div>
   <!-- End Breadcrumbs --> 


    <div class="loginf">   
         <% if(resp.includes('OOPS')) { %> 
        <i class="fa fa-times" aria-hidden="true"></i>
        <p class="bigg"><%=resp%></p>
         <a href='/' style="text-decoration:none;"><button id="sending">Go Home</button></a>
         <% } else { %>  
        <i class="fa fa-check-circle" aria-hidden="true"></i>   
        <p class="bigg"><%=resp%></p>
         <a href='/<%=link%>' style="text-decoration:none;"><button class="btn" id="sending">Go To <%=link%></button></a>
         <% } %>  
         <br> 
       </div>  

       <%- include('../partials/footer.ejs'); %>

       <script> 
       </script>

</body>
</html>