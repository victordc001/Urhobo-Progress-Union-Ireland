		  <script>  
		  var contacto = document.getElementById('contacto');
		  contacto.addEventListener('submit', async (e)=>{
			  e.preventDefault();
	         
			   var uname = document.getElementById('uname'); 
			   var uemail = document.getElementById('uemail');
			   var uphone = document.getElementById('uphone');
			   var usub = document.getElementById('usub');
			   var umsg = document.getElementById('umsg');   

			   var errsend = document.getElementById('errsend');

			   var btn = document.getElementById('mup');
			   btn.innerHTML = 'Sending...';
			   btn.style.opacity = 0.45356;
			   btn.disabled = true;  


			   const data = {
				   sendername: uname.value,
				   senderphone: uphone.value,
				   senderemail: uemail.value,
				   sendersubject: usub.value,
				   sendermessage: umsg.value,
			   }
			   
			   try{
				      const resp = await fetch('/postcontact', {
						  method : 'post',
						  body : JSON.stringify(data), 
						  headers:{ 
							'Content-Type':'application/json',
						     Accept:'application/json',
						  },
					  }); 

					  if(!resp.ok) {
						  throw resp;
					  }  

					  btn.innerHTML = 'Send';
			   btn.style.opacity = 4;
			   btn.disabled = false;    

			   alert('Message sent successfully . Thanks for contacting us');
			      setTimeout(()=>{
					  location.reload();
				  }, 1000);
			   }   

			   catch(err) {
				  const error = await err.text();
				  errsend.innerHTML = error;
				  btn.innerHTML = 'Send';
			   btn.style.opacity = 4;
			   btn.disabled = false; 
			   }
		  })
		  </script>
